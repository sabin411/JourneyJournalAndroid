<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loginTopGif"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:src="@drawable/login_gif"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/loginHeader"
                app:layout_constraintTop_toBottomOf="@+id/loginTopGif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loginHeader"
                android:textColor="@color/fontBlueColor"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSelectHandle="@color/primaryColor"
                />

            <TextView
                android:id="@+id/loginSubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                android:text="Lets organize your puchases with
priority and actual need."
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/fadedBlack"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        style = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/emailInput"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        style = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_baseline_lock_open_24"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/passwordInput"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="Forgot Password?"
        android:textColor="@color/fontBlueColor"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:elevation="0dp"
        android:shadowColor="@color/white"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/loginHeader"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryColor"
        android:padding="12dp"
        app:cornerRadius="25dp"
        />
    <Button
        android:id="@+id/newUserSignUP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="New User? Sign UP"
        android:textStyle="bold"
        android:textColor="@color/fontBlueColor"
        android:layout_gravity="center"
        android:elevation="0dp"
        />

</LinearLayout>


</LinearLayout>